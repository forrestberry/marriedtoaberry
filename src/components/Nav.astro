---
import ThemeSwitcher from './ThemeSwitcher.astro';
---
<nav>
    <div class="container">
        <a href="/" class="title">Married to a Berry</a>
        <ul>
            <li><a href="https://theolexica.com" target="_blank">Theolexica</a></li>
            <li><a href="/testimony">Testimony</a></li>
            <li><ThemeSwitcher /></li>
        </ul>
    </div>
</nav>

<style>
    nav {
        background-color: var(--nav-background);
        padding: 1rem 0;
        border-bottom: 1px solid var(--accent);
    }

    .container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        max-width: 960px;
        margin: 0 auto;
        padding: 0 1rem;
    }

    .title {
        font-size: 1.5rem;
        font-weight: bold;
        text-decoration: none;
        color: var(--text);
    }

    ul {
        list-style: none;
        margin: 0;
        padding: 0;
        display: flex;
        gap: 1rem;
        align-items: center;
    }

    a {
        text-decoration: none;
        color: var(--text);
    }
</style>
